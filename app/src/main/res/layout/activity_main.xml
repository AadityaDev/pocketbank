<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technawabs.pocketbank.activities.MainActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/app_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/email_hint_text"
        android:maxLines="1"
        android:textSize="@dimen/dimen_16_sp"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:layout_margin="@dimen/dimen_16dp"
        />

    <EditText
        android:id="@+id/user_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/user_email"
        android:hint="@string/mobile_hint_text"
        android:maxLines="1"
        android:textSize="@dimen/dimen_16_sp"
        android:layout_margin="@dimen/dimen_16dp"
        />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_mobile"
        android:text="@string/sign_up_text"
        android:layout_margin="@dimen/dimen_16dp"
        />
</RelativeLayout>
